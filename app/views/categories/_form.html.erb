<%= render 'shared/errors', obj: @category %>
  <%= form_for @category do |f| %>
    <div class="form-group">
      <label for="title">
            <%= f.label :name %>
          </label>
      <%= f.text_field :name, class:"form-control", id:"name", placeholder:"Category name"%>
    </div>

    <%= f.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", articles_path, class:"btn btn-danger" %>
        <% end %>