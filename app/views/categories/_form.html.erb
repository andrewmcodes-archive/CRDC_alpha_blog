<%= render 'shared/errors', obj: @category %>

<%= form_for @category, class: "form-edit" do |f| %>
  <div class="form-group">
    <label for="title" class="sr-only">
          <%= f.label :name %>
        </label>
    <%= f.text_field :name, class:"form-control", id:"name", placeholder:"Category name"%>
  </div>

  <%= f.submit class:"btn btn-lg btn-primary btn-block" %>
  <br>
  <%= link_to "Cancel", articles_path, class:"btn btn-sm btn-danger" %>
      <% end %>