<%= render 'shared/errors', obj: @article %>
      <%= form_for @article, class: "form-signup" do |f| %>
        <div class="form-group">
          <label for="title">
            <%= f.label :title %>
          </label>
          <%= f.text_field :title, class:"form-control", id:"title", placeholder:"Title"%>
        </div>
        <div class="form-group">
          <label for="description">
            <%= f.label :description %>
          </label>
          <%= f.text_area :description, class:"form-control", id:"description", placeholder:"Description" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
            <% cb.label(class: "form-check-label") {cb.check_box(class:"") + cb.text} %>
          <% end %>
        </div>
        <%= f.submit class:"btn btn-lg btn-primary btn-block" %> 
        <br>
        <%= link_to "Cancel", articles_path, class:"btn btn-sm btn-danger" %>
      <% end %>
   
