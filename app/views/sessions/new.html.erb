
<div class="container-fluid form-a">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 form-a-card">
      <h1 align="center">Log In</h1>
      <%= form_for :session, url: login_path do |f| %>
        <div class="form-group">
          <label for="email">
            <%= f.label :email %>
          </label>
          <%= f.email_field :email, class:"form-control", id:"email", placeholder:"Enter email"%>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="passsword">
            <%= f.label :password %>
          </label>
          <%= f.password_field :password, class:"form-control", id:"password", placeholder:"Enter password"%>
            <small id="passwordHelp" class="form-text text-muted">Make sure it is secure!</small>
        </div>
        <%= f.submit "Log in", class:"btn btn-success" %>
          <%= link_to "Cancel", articles_path, class:"btn btn-danger" %>
            <% end %>
    </div>
  </div>
</div>